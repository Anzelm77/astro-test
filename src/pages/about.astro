---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css';

const pageTitle = "Strona o mnie";
const identity = {
    firstName: "Karol",
    lastName: "Drazynski",
    hobby: "pływanie",
    occupation: "Prowadzę projekt DG :)"
}
const skills = ["Zarządzanie projektami", "Tworzenie produktów", "Sprzedaz", "Marketing"];
const happy =   true;
const finished = false;
const goal = 3;
const skillColor = "navy";
const fontWeight = "bold";
const lineHeight = "1.5rem";
---

<Layout title={pageTitle}>
   <main>
        <Header/>
        <br>

        <h1>{pageTitle}</h1>

        <h2>Część, jestem {identity.firstName} {identity.lastName}</h2>

        <p>Na codzień {identity.occupation}, w wolnej chwili lubię {identity.hobby}.</p>

        <p>Moje skille to</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        
        {happy && <p>Cieszę się, ze uczę się Astro!</p>}

        {finished && <p>Skońćzyłem juz kurs Astro!</p>}

        {goal === 3 ? <p>Chcę skończyć w przeciągu 3 dni</p> : <p>Moim celem nie są 3 dni</p>}
        
    <Footer/>
  </main>
</Layout>

<style define:vars={{skillColor, fontWeight, lineHeight}}>
    main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
    h1 {
        color: purple;
        font-size: 4rem;
    }
    h2 {
        color: rgb(80, 18, 80);
        font-size: 2rem;
    }
    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        line-height: var(--lineHeight);
    }
</style>